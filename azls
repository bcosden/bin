echo "| azde: Azure Deployment               |"
echo "----------------------------------------"
echo "| usage:                               |"
echo "| azde state rg                        |"
echo "|                                      |"
echo "| state:                               |"
echo "| NotSpecified, Accepted, Running,     |"
echo "| Ready, Creating, Created, Deleting,  |"
echo "| Deleted, Canceled, Failed,           |"
echo "| Succeeded, Updating,                 |"
echo "| MovingResources, TransientFailure    |"
echo "========================================"
echo "| azhub: List Virtual WANs/Hubs/Routes |"
echo "----------------------------------------"
echo "| usage:                               |"
echo "| azhub       (list all Virtual WANs)  |"
echo "| azhub rg    (list hub details in rg) |"
echo "| azhub rg rt (list route tables)      |"
echo "========================================"
echo "| azrg: List resource groups (rg)      |"
echo "----------------------------------------"
echo "| usage:                               |"
echo "| azrg         (list rg names)         |"
echo "| azrg -a      (list all rg names)     |"
echo "| azrg -d      (delete rg)             |"
echo "| azrg rg      (list resources)        |"
echo "| azrg rg id   (list resources by type)|"
echo "========================================"
echo "| azrt: Dump NIC route tables          |"
echo "----------------------------------------"
echo "| usage:                               |"
echo "| azrt rg nic  (list rt by nic)        |"
echo "========================================"
echo "| azssh: SSH tunnel into Bastion       |"
echo "----------------------------------------"
echo "| usage:                               |"
echo "| azssh         (list all bastions)    |"
echo "| azssh rg vm   (ssh into VM)          |"
echo "| azssh rg vm <bastion>                |"
echo "========================================"
echo "| azvm: List VMs and details           |"
echo "----------------------------------------"
echo "| usage:                               |"
echo "| azvm           (list all VM's)       |"
echo "| azvm rg        (list VM details)     |"
echo "| azvm rg start  (start vm's in rg)    |"
echo "| azvm rg stop   (stop vm's in rg)     |"
